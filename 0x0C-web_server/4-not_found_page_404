#!/usr/bin/env bash
# update package list and install nginx
apt-get update
apt-get install -y nginx

# Create a basic HTML page with "Hello World!" for the root
echo "Hello World!" > /var/www/html/index.html

# Create a custom 404 page with the specified content
echo "Ceci n'est pas une page." > /var/www/html/404.html

# Configure Nginx to listen on port 80 and serve the created HTML pages
echo "server {
    listen 80;
    server_name _;

    location / {
        root /var/www/html;
        index index.html;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx
service nginx restart

# Test Nginx by querying a non-existent page with curl
if curl -s http://localhost/nonexistent | grep -q "Ceci n'est pas une page"; then
    echo "Nginx configuration for custom 404 page successful!"
else
    echo "Error: Nginx configuration for custom 404 page may have issues."
fi
